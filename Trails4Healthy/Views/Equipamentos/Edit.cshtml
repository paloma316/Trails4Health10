            </div>
            <div class="form-group">
                <label asp-for="DescricaoEquipamento" class="control-label"></label>
                <input asp-for="DescricaoEquipamento" class="form-control" />
                <span asp-validation-for="DescricaoEquipamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorUnidade" class="control-label"></label>
                <input asp-for="ValorUnidade" class="form-control" />
                <span asp-validation-for="ValorUnidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Disponível" /> @Html.DisplayNameFor(model => model.Disponível)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

