    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Equipamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EquipamentoId" />
            <div class="form-group">
                <label asp-for="NomeEquipamento" class="control-label"></label>
                <input asp-for="NomeEquipamento" class="form-control" />
                <span asp-validation-for="NomeEquipamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeEquip" class="control-label"></label>
                <input asp-for="QuantidadeEquip" class="form-control" />
