@model IEnumerable<Trails4Healthy.Models.LoginClass>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pass)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Numero_Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Morada)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TuristaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TuristaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TuristaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
