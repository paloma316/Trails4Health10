@model IEnumerable<Trail>

@{
    ViewData["Title"] = "Lista de trilhos";
}

<h2>Trilhos</h2>

@if (Model.Count() == 0) {
    <p>Ainda não existem trilhos disponiveis</p>
} else {
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Dificuldade</th>
                <th>Distancia</th>
                <th>Disponibilidade</th>
			    <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model) {
                <tr>
                    <td>@r.Name</td>
                    <td>@r.Difficulty</td>
                    <td>@r.Distance</td>
                    <td>
                        @if (r.Available == true) {
                            @: Sim
                        } else if (r.Available == false) {
                            @: Não
                        } else {
                            @: Pendente
                        }
                    </td>
			        <td><a asp-action="NewTrail" class="btn btn-primary">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<p>Quer Criar um trilho?</p>
<a asp-action="NewTrail" class="btn btn-primary">Submit here</a>